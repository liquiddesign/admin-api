{
  "name": "liquiddesign/admin-api",
  "description": "Admin API",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "liquiddesign/admin": "~0.4.2",
    "liquiddesign/lqgraphi": "~0.0.11",
    "ext-intl": "*",
    "ext-pdo": "*",
    "ext-curl": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "nette/tester": "^2.4",
    "phpstan/phpstan-nette": "^1.0",
    "squizlabs/php_codesniffer": "~3.7",
    "slevomat/coding-standard": "~8.2"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "AdminApi\\": "src"
    }
  },
  "scripts": {
    "fix-code": ["@phpcsfix"],
    "check-code": ["@phpcs", "@phpstan"],
    "phpstan": "phpstan analyse --memory-limit 4G -c phpstan.neon",
    "phpcs": "phpcs --standard=ruleset.xml --ignore=*/tests/* --cache src",
    "phpcsfix": "phpcbf --standard=ruleset.xml --cache src",
    "init-develop": "AdminApi\\Scripts::initDevel",
    "init-production": "AdminApi\\Scripts::initProduction",
    "clear-nette-cache": "AdminApi\\Scripts::clearNetteCache",
    "maintenance": 	"AdminApi\\Scripts::maintenance",
    "create-database": "Migrator\\Scripts::createDatabase",
    "sync-database": [
      "AdminApi\\Scripts::clearNetteCache",
      "AdminApi\\Scripts::syncDatabase"
    ],
    "deploy": [
      "@maintenance on",
      "git pull",
      "composer clear-cache",
      "composer install --no-dev --no-interaction",
      "@sync-database",
      "@clear-nette-cache",
      "@maintenance off"
    ],
    "test": "cd tests && npm run test"
  },
  "config": {
    "allow-plugins": {
      "symfony/thanks": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
